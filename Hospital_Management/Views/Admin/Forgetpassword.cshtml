@{
    Layout = null;
}
@model User


<title>OTP Verification</title>
<script src="https://cdn.tailwindcss.com"></script>

<body class="bg-gradient-to-br from-blue-100 via-white to-green-100 min-h-screen flex items-center justify-center">

    <div class="bg-white p-8 rounded-2xl shadow-2xl w-full max-w-md transition-all duration-300 ease-in-out">

        <!-- Gmail Section -->
        <div id="gmailSection">
            <h2 class="text-2xl font-bold text-center text-blue-700 mb-2">🔐 Admin Verification</h2>
            <p class="text-center text-gray-500 mb-6">Enter your registered Gmail to receive OTP.</p>

            <input type="text"
                   asp-for="Email"
                   id="gmailInput"
                   placeholder="Enter your email"
                   class="w-full border border-gray-300 rounded-lg px-4 py-3 mb-4 focus:outline-none focus:ring-2 focus:ring-blue-500 shadow-sm" />

            <button id="sendOtpBtn"
                    class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 rounded-lg transition">
                📤 Send OTP
            </button>
        </div>

        <!-- OTP Section -->
        <div id="otpSection" class="hidden">
            <h2 class="text-2xl font-bold text-center text-green-700 mb-2">✅ OTP Sent!</h2>
            <p class="text-center text-gray-500 mb-6">Check your inbox and enter the 6-digit OTP below.</p>

            <input type="text"
                   id="otpInput"
                   maxlength="6"
                   placeholder="Enter OTP"
                   class="w-full text-center border border-gray-300 rounded-lg px-4 py-3 mb-4 focus:outline-none focus:ring-2 focus:ring-green-500 shadow-sm text-lg tracking-widest" />

            <button id="verifyOtpBtn"
                    class="w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-3 rounded-lg transition">
                🔍 Verify OTP
            </button>
        </div>
        <!-- Loading Overlay (Only Spinner with Blur) -->
        <div id="loadingOverlay"
             class="position-fixed top-0 start-0 w-100 h-100 d-none z-3 d-flex justify-content-center align-items-center"
             style="backdrop-filter: blur(5px); background-color: rgba(0, 0, 0, 0.3);">

            <div class="spinner-border text-light" style="width: 3rem; height: 3rem;" role="status"></div>
        </div>

        <span id="errorMsg" class="text-center text-red-500 mt-4 block font-medium"></span>
    </div>
</body>
<script type="text/javascript" asp-append-version="true" src="~/js/forgetpassword.js"></script>

