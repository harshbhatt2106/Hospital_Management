@model Hospital_Management.Models.User

@{
    ViewData["Title"] = "Update Admin";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h4 class="mb-0">Update Admin Profile</h4>
            <small>Update your administrative account details</small>
        </div>
        <div class="card-body">
            <form asp-action="UpdateAdmin" asp-controller="Admin" method="post">
                <input type="hidden" asp-for="UserID" />

                <!-- Username -->
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label">Username</label>
                    <input asp-for="UserName" class="form-control" placeholder="e.g. admin123" required />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <!-- Mobile Number -->
                <div class="mb-3">
                    <label asp-for="MobileNo" class="form-label">Mobile Number</label>
                    <input asp-for="MobileNo" class="form-control" placeholder="e.g. +91 9876543210" required />
                    <span asp-validation-for="MobileNo" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email Address</label>
                    <input asp-for="Email" class="form-control" placeholder="e.g. admin@hospital.com" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="text-center">
                    <button type="submit" class="btn btn-primary px-4">Update Profile</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
