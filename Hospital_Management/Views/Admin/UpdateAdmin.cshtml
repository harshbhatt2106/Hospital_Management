@model Hospital_Management.Models.User

@{
    ViewData["Title"] = "Update Admin";
}

<div class="min-h-screen bg-gray-100 flex items-center justify-center px-4">
    <div class="bg-white shadow-md rounded-lg p-8 max-w-lg w-full">
        <h2 class="text-2xl font-bold text-center text-blue-700 mb-6">Update Admin Details</h2>

        <form asp-action="UpdateAdmin" asp-controller="Admin" method="post" class="space-y-5">
            <input type="hidden" asp-for="UserID" />

            <div>
                <label asp-for="UserName" class="block mb-1 text-sm font-medium text-gray-700">Username</label>
                <input asp-for="UserName" placeholder="Enter your name"
                       class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required />
                <span asp-validation-for="UserName" class="text-sm text-red-500 mt-1 block"></span>
            </div>

            <div>
                <label asp-for="MobileNo" class="block mb-1 text-sm font-medium text-gray-700">Mobile Number</label>
                <input asp-for="MobileNo" placeholder="Enter your mobile number"
                       class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required />
                <span asp-validation-for="MobileNo" class="text-sm text-red-500 mt-1 block"></span>
            </div>

            <div>
                <label asp-for="Email" class="block mb-1 text-sm font-medium text-gray-700">Email</label>
                <input asp-for="Email" placeholder="Enter your email"
                       class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required />
                <span asp-validation-for="Email" class="text-sm text-red-500 mt-1 block"></span>
            </div>

            <div class="text-center">
                <button type="submit"
                        class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-2 rounded-md shadow-sm transition duration-200">
                    Update
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
