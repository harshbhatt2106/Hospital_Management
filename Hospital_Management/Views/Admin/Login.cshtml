@{
    ViewData["Title"] = "Hospital Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #2563eb;
            --primary-hover: #1d4ed8;
            --secondary-color: #f8fafc;
            --accent-color: #10b981;
            --text-dark: #1e293b;
            --text-light: #64748b;
        }

        body {
            background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 50%, #bae6fd 100%);
            font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 1rem;
        }

        .login-container {
            width: 100%;
            max-width: 420px;
            perspective: 1000px;
        }

        .login-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 16px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            padding: 2.5rem;
            transform-style: preserve-3d;
            transition: transform 0.3s ease;
            border: 1px solid rgba(255, 255, 255, 0.3);
            backdrop-filter: blur(10px);
        }

            .login-card:hover {
                transform: translateY(-5px) rotateX(2deg);
            }

        .hospital-logo {
            width: 80px;
            height: 80px;
            margin: 0 auto 1.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, var(--primary-color), #3b82f6);
            border-radius: 50%;
            color: white;
            font-size: 2rem;
            box-shadow: 0 4px 15px rgba(37, 99, 235, 0.3);
        }

        .login-title {
            color: var(--text-dark);
            font-weight: 700;
            text-align: center;
            margin-bottom: 0.5rem;
            font-size: 1.75rem;
        }

        .login-subtitle {
            color: var(--text-light);
            text-align: center;
            margin-bottom: 2rem;
            font-weight: 400;
        }

        .input-group {
            position: relative;
            margin-bottom: 1.5rem;
        }

        .input-icon {
            position: absolute;
            top: 50%;
            left: 1rem;
            transform: translateY(-50%);
            color: var(--text-light);
            z-index: 2;
        }

        .form-control {
            width: 100%;
            padding: 0.75rem 1rem 0.75rem 2.5rem;
            border: 1px solid #e2e8f0;
            border-radius: 8px;
            background-color: var(--secondary-color);
            transition: all 0.3s ease;
            height: 48px;
            font-size: 0.95rem;
        }

            .form-control:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
                background-color: white;
            }

        .login-btn {
            background-color: var(--primary-color);
            color: white;
            border: none;
            padding: 0.75rem;
            border-radius: 8px;
            font-weight: 600;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
            margin-top: 0.5rem;
            height: 48px;
            font-size: 1rem;
        }

            .login-btn:hover {
                background-color: var(--primary-hover);
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(37, 99, 235, 0.2);
            }

        .forgot-link {
            display: block;
            text-align: center;
            color: var(--text-light);
            margin-top: 1.5rem;
            text-decoration: none;
            transition: color 0.2s ease;
            font-size: 0.9rem;
        }

            .forgot-link:hover {
                color: var(--primary-color);
                text-decoration: underline;
            }

        .alert {
            border-radius: 8px;
            padding: 0.75rem 1rem;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="hospital-logo">
                <i class="fas fa-hospital"></i>
            </div>
            <h4 class="login-title">Hospital Management System</h4>
            <p class="login-subtitle">Sign in to access your account</p>

            <form method="post" asp-action="Login" asp-controller="Admin">
                <div class="input-group">
                    <span class="input-icon"><i class="fas fa-user"></i></span>
                    <input type="text" class="form-control" name="username" placeholder="Username" required />
                </div>

                <div class="input-group">
                    <span class="input-icon"><i class="fas fa-lock"></i></span>
                    <input type="password" class="form-control" name="password" placeholder="Password" required />
                </div>

                <button type="submit" class="btn login-btn w-100">SIGN IN</button>

                @{
                    if (TempData["IsLogin"] != null)
                    {
                        <div class="alert alert-danger mt-3" role="alert">
                            @TempData["IsLogin"]
                        </div>
                    }
                }
            </form>
            <a asp-action="Forgetpassword" asp-controller="Admin" class="forgot-link">Forgot password?</a>
        </div>
    </div>
</body>
</html>