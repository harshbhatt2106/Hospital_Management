<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hospital Management System</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!-- Organize CSS files -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admindashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Hospital_Management.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/_layout.css" asp-append-version="true" />
    <style>

        /* Ensure proper spacing and layout */
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        /* Main content area should grow to fill space */
        .flex-grow-1 {
            flex-grow: 1;
        }

        /* If you're using a footer */
        footer {
            width: 100%;
        }
    </style>
</head>

<body class="d-flex flex-column min-vh-100">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand text-white text-shadow" href="#">
                <i class="fas fa-hospital me-2"></i> Hospital Management
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">

                    <!-- Doctor -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white d-flex align-items-center gap-2" href="#" id="departmentDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-building"></i> Doctor
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="departmentDropdown">
                            <li>
                                <a class="dropdown-item" href="/Doctor/AddDoctor/">
                                    <i class="fas fa-list me-2"></i> Add Doctor
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="/Doctor/ShowDoctors/">
                                    <i class="fas fa-plus-circle me-2"></i> DoctorList
                                </a>
                            </li>
                        </ul>
                    </li>

                    <!-- Department Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white d-flex align-items-center gap-2" href="#" id="departmentDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-building"></i> Departments
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="departmentDropdown">
                            <li>
                                <a class="dropdown-item" href="/Department/DepartmentList">
                                    <i class="fas fa-list me-2"></i> Department List
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="/Department/AddDepartment">
                                    <i class="fas fa-plus-circle me-2"></i> Add Department
                                </a>
                            </li>
                        </ul>
                    </li>

                    <!-- Patient -->
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#">
                            <i class="fas fa-procedures"></i> Patients
                        </a>
                    </li>

                    <!-- Appointment -->
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#">
                            <i class="fas fa-calendar-check"></i> Appointments
                        </a>
                    </li>

                    <!-- Dashboard -->
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Admin/AdminDashboard">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                    </li>

                    <!-- User Profile Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white d-flex align-items-center gap-2" href="#" id="userProfileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user-circle fs-5"></i> Profile
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userProfileDropdown">
                            <li>
                                <a class="dropdown-item" href="/Admin/AdminProfile">
                                    <i class="fas fa-user me-2"></i> My Profile
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="/Admin/Logout">
                                    <i class="fas fa-sign-out-alt me-2"></i> Logout
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <main role="main" class="container-fluid flex-grow-1 py-4">
        @RenderBody()
    </main>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>