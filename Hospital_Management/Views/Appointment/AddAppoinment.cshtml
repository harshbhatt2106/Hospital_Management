@model AppoimentViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Make Appointment - Hospital Management</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            background: #f8fafc;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        }

        .card-header {
            background: linear-gradient(90deg, #0d6efd, #2563eb);
            color: #fff;
            border-radius: 15px 15px 0 0;
            font-weight: 600;
            font-size: 1.25rem;
        }

        .form-label.required::after {
            content: " *";
            color: red;
        }

        .btn-primary {
            padding: 10px 25px;
            border-radius: 10px;
            font-weight: 500;
        }

        h5.section-title {
            font-size: 1.1rem;
            margin-top: 25px;
            margin-bottom: 15px;
            font-weight: 600;
            color: #2563eb;
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-calendar-plus me-2"></i> Make Appointment
            </div>
            <div class="card-body p-4">
                <form asp-action="BookAppointment" method="post">

                    <!-- Patient Information -->
                    <h5 class="section-title"><i class="bi bi-person-fill me-1"></i> Patient Information</h5>
                    <div class="mb-3 position-relative">
                        <label class="form-label required">Patient Name</label>
                        <input type="text" asp-for="Patient.Name" class="form-control" id="PatientNameSearchBox" placeholder="Enter Patient Name" autocomplete="off">
                        <ul class="list-group shadow-sm" id="PatientList"
                            style="position:absolute; top:100%; left:0; right:0; z-index:1050; display:none; max-height:200px; overflow-y:auto;">
                        </ul>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Phone</label>
                            <input type="text" asp-for="Patient.Phone" class="form-control" id="PatientPhone">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" asp-for="Patient.Email" class="form-control" id="PatientEmail">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Address</label>
                        <input type="text" asp-for="Patient.Address" class="form-control" id="PatientAddress">
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">City</label>
                            <input type="text" asp-for="Patient.City" class="form-control" id="PatientCity">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">State</label>
                            <input type="text" asp-for="Patient.State" class="form-control" id="PatientState">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label required" id="dateofbirth">Date of Birth</label>
                            <input type="date" asp-for="Patient.DateOfBirth" class="form-control">
                        </div>
                    </div>

                    <!-- Doctor & Department -->
                    <h5 class="section-title"><i class="bi bi-hospital me-1"></i> Doctor & Department</h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label required">Select Doctor</label>
                            <select class="form-select" asp-for="DoctorId" id="DoctorDropdown">
                                <option value="" selected>-- Select Doctor --</option>
                                @foreach (var data in Model.doctors)
                                {
                                    <option value="@data.DoctorId">@data.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label required">Select Department</label>
                            <select class="form-select" asp-for="DepartmentId" id="DepartmentDropdown">
                                <option value="" selected>-- Select Department --</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label required">Gender</label>
                            <select class="form-select" asp-for="Patient.Gender">
                                <option value="" selected>-- Select Gender --</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                        </div>
                    </div>


                    <!-- Appointment Schedule -->
                    <h5 class="section-title"><i class="bi bi-clock me-1"></i> Appointment Schedule</h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label required">Appointment Date</label>
                            <input type="date" asp-for="Appointment.AppointmentDate" class="form-control" id="AppointmentDate">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label required">Appointment Time</label>
                            <input type="time" asp-for="AppointmentTime" class="form-control" required>
                        </div>
                    </div>

                    <!-- Extra Details -->
                    <h5 class="section-title"><i class="bi bi-chat-square-text me-1"></i> Additional Information</h5>
                    <div class="mb-3">
                        <label class="form-label">Special Remark</label>
                        <input type="text" asp-for="Appointment.SpecialRemarks" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea asp-for="Appointment.Description" class="form-control" rows="3"></textarea>
                    </div>

                    <!-- Submit -->
                    <div class="text-end mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-1"></i> Book Appointment
                        </button>
                    </div>
                    @{
                        if (@TempData["AppoimentStatus"] != null)
                        {
                            <p>TempData["AppoimentStatus"]</p>
                        }
                    }
                </form>
            </div>
        </div>
    </div>

    <script type="text/javascript" asp-append-version="true" src="~/js/addappoiment.js"></script>
</body>
</html>
