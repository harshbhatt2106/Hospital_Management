@{
    Layout = null;
}
@model User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OTP Verification</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        .card {
            backdrop-filter: blur(16px) saturate(180%);
            -webkit-backdrop-filter: blur(16px) saturate(180%);
            background-color: rgba(255, 255, 255, 0.85);
            border-radius: 1.5rem;
            border: 1px solid rgba(255, 255, 255, 0.125);
        }

        .otp-input {
            letter-spacing: 0.5rem;
            font-size: 1.5rem;
            font-weight: 600;
        }

        .btn-primary {
            background-image: linear-gradient(to right, #3b82f6, #6366f1);
            box-shadow: 0 4px 15px rgba(59, 130, 246, 0.3);
        }

            .btn-primary:hover {
                background-image: linear-gradient(to right, #6366f1, #3b82f6);
                box-shadow: 0 6px 20px rgba(59, 130, 246, 0.4);
            }

        .btn-success {
            background-image: linear-gradient(to right, #10b981, #059669);
            box-shadow: 0 4px 15px rgba(16, 185, 129, 0.3);
        }

            .btn-success:hover {
                background-image: linear-gradient(to right, #059669, #10b981);
                box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
            }
    </style>
</head>
<body class="bg-gradient-to-br from-blue-50 to-emerald-50 min-h-screen flex items-center justify-center p-4">
    <div class="card p-8 w-full max-w-md transition-all duration-300 ease-in-out transform hover:scale-[1.01]">
        <!-- Gmail Section -->
        <div id="gmailSection" class="space-y-6">
            <div class="text-center">
                <div class="w-16 h-16 bg-blue-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                    </svg>
                </div>
                <h2 class="text-3xl font-bold text-gray-800">Admin Verification</h2>
                <p class="text-gray-500 mt-2">Enter your registered email to receive OTP</p>
            </div>

            <div>
                <input type="text"
                       asp-for="Email"
                       id="gmailInput"
                       placeholder="john@example.com"
                       class="w-full px-5 py-3 rounded-xl border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition duration-300 outline-none" />
            </div>
            
            <button id="sendOtpBtn"
                    class="btn-primary w-full text-white font-semibold py-3 rounded-xl transition duration-300">
                Send OTP
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline ml-1" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M10.894 2.553a1 1 0 00-1.788 0l-7 14a1 1 0 001.169 1.409l5-1.429A1 1 0 009 15.571V11a1 1 0 112 0v4.571a1 1 0 00.725.962l5 1.428a1 1 0 001.17-1.408l-7-14z" />
                </svg>
            </button>
        </div>

        <!-- OTP Section -->
        <div id="otpSection" class="hidden space-y-6">
            <div class="text-center">
                <div class="w-16 h-16 bg-green-50 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-sm">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
                <h2 class="text-2xl font-bold text-gray-800">Verification Code Sent</h2>
                <p class="text-gray-500 mt-2 text-sm">We've sent a 6-digit code to your email</p>
            </div>

            <div class="space-y-4">
                <!-- OTP Input -->
                <div>
                    <input type="text"
                           id="otpInput"
                           maxlength="6"
                           placeholder="••••••"
                           class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-green-500 focus:ring-2 focus:ring-green-100 transition duration-200 outline-none text-center text-lg font-semibold tracking-widest" />
                </div>

                <!-- Verify Button -->
                <button id="verifyOtpBtn"
                        class="w-full bg-green-600 hover:bg-green-700 text-white font-medium py-3 rounded-lg transition duration-200 shadow-sm hover:shadow-md flex items-center justify-center">
                    Verify Code
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                </button>

                <!-- Resend OTP Section -->
                <div class="text-center pt-2">
                    <p class="text-sm text-gray-500">
                        Didn't receive code?
                        <button id="resendOtpBtn" class="text-green-600 hover:text-green-700 font-medium disabled:text-gray-400">
                            Resend Code
                        </button>
                    </p>
                    <div id="timer" class="hidden text-xs text-gray-400 mt-1">
                        Resend available in <span class="font-medium"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Loading Overlay -->
        <div id="loadingOverlay" class="hidden fixed inset-0 z-50 flex items-center justify-center backdrop-blur-sm bg-black/30">
            <div class="flex flex-col items-center gap-4 p-4 bg-gray-900/70 rounded-lg">
                <div class="w-16 h-16 border-4 border-white border-t-blue-500 border-r-blue-500 rounded-full animate-spin"></div>
                <div id="loaddata" class="text-white text-lg font-semibold animate-pulse">Processing...</div>
            </div>
        </div>

        <div id="errorMsg" class="text-center text-red-500 mt-6 font-medium animate-pulse"></div>
    </div>

</body>
</html>

<script type="module" asp-append-version="true" src="~/js/forgetpassword.js"></script>